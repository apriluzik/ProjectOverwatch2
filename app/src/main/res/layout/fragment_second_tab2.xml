<RelativeLayout
    android:id="@+id/layout_tab2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.apriluzikgmail.m.projectoverwatch2.SecondTab2Fragment"
   >

    <ImageView
        android:id="@+id/tab2Bg"
        android:scaleType="fitXY"
        android:src="@drawable/ow_bg_02"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        app:font="custom1"
        android:layout_margin="24dp"
        android:gravity="center"
        android:id="@+id/tab2subText"
        android:text="SUB TEXT"
        android:textColor="@color/ov_lightblue"
        android:textSize="32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/tab2subText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

<LinearLayout
    android:id="@+id/layout_biog"
    android:padding="8dp"
    android:layout_below="@+id/tab2subText"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:id="@+id/tab2realname"
        android:text="본명:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tab2age"
        android:text="나이:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tab2occupation"
        android:text="직업:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tab2Base"
        android:text="거주지:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tab2Affiliation"
        android:text="소속:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_margin="4dp"
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/tab2storTxt"
        android:text="STORY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView

        android:layout_margin="2dp"
        android:id="@+id/tab2MainText"
        android:layout_weight="1"
        android:text="MMMAAAAINNNNNNN TEXT"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
